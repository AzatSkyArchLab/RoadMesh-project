# RoadMesh Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# PATHS
# =============================================================================
ROADMESH_CONFIG_PATH=configs/base.yaml
ROADMESH_DATA_DIR=./data
ROADMESH_WEIGHTS_DIR=./weights

# =============================================================================
# DEVICE
# =============================================================================
# CUDA device index (0 for first GPU)
ROADMESH_CUDA_DEVICE=0

# =============================================================================
# API KEYS (Optional)
# =============================================================================
# Mapbox (if using Mapbox tiles instead of Esri)
# ROADMESH_MAPBOX_API_KEY=your_mapbox_key

# Google Maps (if using Google tiles)
# ROADMESH_GOOGLE_API_KEY=your_google_key

# Weights & Biases (for experiment tracking)
# ROADMESH_WANDB_API_KEY=your_wandb_key
# WANDB_PROJECT=roadmesh
# WANDB_ENTITY=your_username

# =============================================================================
# API SERVER
# =============================================================================
ROADMESH_API_HOST=0.0.0.0
ROADMESH_API_PORT=8000
ROADMESH_API_WORKERS=4

# =============================================================================
# LOGGING
# =============================================================================
ROADMESH_LOG_LEVEL=INFO
